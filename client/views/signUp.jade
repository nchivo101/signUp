doctype html
html
    head
        link(rel="stylesheet" href="libs/bootstrap.css")
    body
        .container
            h3 Sign up
            form(method="post" action="/signup")
                .form-group
                    label Username
                    input.form-control(name="name")
                .form-group
                    label Password
                    input(type="password").form-control(name="password")
                button#login.btn.btn-default(type="submit") Sign Up
